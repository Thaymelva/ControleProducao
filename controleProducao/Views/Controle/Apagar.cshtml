@model ControleModel
@{
    ViewData["Title"] = "Confirmação de exclusão de Atividade";
}

<div class="text-center">
    <h1 class="display-4">Realmente deseja apagar a ação realizada em (@Model.Inicio)?</h1>
</div>

<a class="btn btn-primary btn-block" role="button" asp-controller="Controle" asp-action="Index">Cancelar exclusão</a>
<a class="btn btn-danger btn-block" asp-action="ApagarConfirm" asp-controller="Controle" asp-route-Id="@Model.Id" role="button">Confirmar</a>